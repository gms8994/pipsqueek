# [BlackJack]

# How much cash does a new player start with (or a player who resets himself)
blackjack_starting_bank = 500

# The minimum amount that a single hand bet can be
blackjack_minimum_bet = 50

# The maximum amount of money that the bank will allow a player to bet if that
# player is in debt (has a negative bankroll)
blackjack_maximum_loan = 500

# How much cash does a player have to have in order to play in the channel
# instead of in a private message ("The High Rollers Club")
blackjack_high_roller = 5000

# How many decks of cards in our blackjack shoe? (most casinos play 6)
blackjack_number_of_decks = 6

